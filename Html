<body>
    <div class="container">
        <h1>¿Cuántas personas amas en la vida?</h1>
        
        <div class="alphabet">
            <!-- Letras del abecedario generadas con JavaScript -->
        </div>
        
        <div class="footer">
            Solo una persona merece un ✅ en tu corazón
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const alphabetContainer = document.querySelector('.alphabet');
            const letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'.split('');
            
            letters.forEach(letter => {
                const letterElement = document.createElement('div');
                letterElement.className = 'letter';
                
                const charElement = document.createElement('div');
                charElement.textContent = letter;
                
                const emojiElement = document.createElement('div');
                emojiElement.className = 'emoji';
                
                // La letra A es la correcta, las demás incorrectas
                if (letter === 'A') {
                    emojiElement.textContent = '✅';
                    emojiElement.classList.add('correct');
                } else {
                    emojiElement.textContent = '❌';
                    emojiElement.classList.add('incorrect');
                }
                
                letterElement.appendChild(charElement);
                letterElement.appendChild(emojiElement);
                alphabetContainer.appendChild(letterElement);
            });
        });
    </script>
</body>
